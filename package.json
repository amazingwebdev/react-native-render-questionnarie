{
	"name": "tvba",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"install-icons": "rnpm link react-native-vector-icons",
		"start": "node node_modules/react-native/local-cli/cli.js start --skipflow",
		"android": "node node_modules/react-native/local-cli/cli.js run-android",
		"ios": "node node_modules/react-native/local-cli/cli.js run-ios",
		"prebuild": "node node_modules/.bin/rimraf build",
		"build": "node node_modules/typescript/bin/tsc --watch",
		"release": "node node_modules/typescript/bin/tsc",
		"pretest": "npm run build",
		"test": "jest"
	},
	"dependencies": {
		"native-base": "^2.1.3",
		"react": "16.0.0-alpha.6",
		"react-native": "0.44.0"
	},
	"devDependencies": {
		"@types/jest": "^19.2.3",
		"@types/react": "^15.0.24",
		"@types/react-native": "^0.43.11",
		"@types/react-test-renderer": "^15.5.0",
		"babel-jest": "^19.0.0",
		"babel-preset-react-native": "^1.9.1",
		"jest": "19.0.2",
		"react-test-renderer": "16.0.0-alpha.6",
		"rimraf": "^2.6.1",
		"rnpm": "^1.9.0",
		"ts-jest": "^19.0.14",
		"typescript": "^2.3.2"
	},
	"jest": {
		"preset": "react-native",
		"transform": {
			"^.+\\.js$": "<rootDir>/node_modules/babel-jest",
			".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
		},
		"testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js"
		],
		"transformIgnorePatterns": [
			"node_modules/(?!native-base)/"
		]
	}
}