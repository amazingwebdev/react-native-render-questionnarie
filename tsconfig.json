{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": [
        "./src/*"
      ]
    },
    "moduleResolution": "node",
    "target": "es2015",
    "module": "es2015",
    "jsx": "react",
    "outDir": "./lib",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": false,
    "sourceMap": true,
    "typeRoots": [
      "types"
    ]
  },
  "include": [
    "typings/**/*",
    "src/**/*"
  ],
  "exclude": [
    "__tests__",
    "index.android.js",
    "index.ios.js",
    "lib",
    "node_modules"
  ]
}